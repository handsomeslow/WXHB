<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/PageBackgroundColor"
    tools:context="com.jx.wxhb.fragment.FunnyFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/official_push_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/ContentBackgroundColor"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/Smallpadding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/view_push_official_layout"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/lucky_group_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ContentBackgroundColor"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/Smallpadding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/view_red_packet_layout"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/daiguo_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ContentBackgroundColor"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/Smallpadding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/view_daiguo_layout"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
