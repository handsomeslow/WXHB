<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/success_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_green_circle"
            android:text="✔"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/error_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_orange_circle"
            android:text="!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <!--<Button-->
        <!--android:id="@+id/start_float_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="开启"-->
        <!--android:layout_gravity="center"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/H3Font"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="是否开启无障碍辅助功能"/>

        <ImageView
            android:id="@+id/open_assistant_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/icon_error"/>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/H3Font"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="是否开启答题悬浮提示框"/>

        <ImageView
            android:id="@+id/float_tip_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/icon_error"/>

    </FrameLayout>

</LinearLayout>
