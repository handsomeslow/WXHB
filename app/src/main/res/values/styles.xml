<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/OrangeColor</item>
        <item name="colorPrimaryDark">@color/OrangeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/OrangeColor</item>
        <item name="colorPrimaryDark">@color/OrangeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/OrangeColor</item>
    </style>

    <!-- 回复、评论-->
    <style name="OwerText">
        <item name="android:textSize">@dimen/H4Font</item>
        <item name="android:textColor">@color/MediumGrayColor</item>
    </style>

    <!-- 回复、评论-->
    <style name="CommentText">
        <item name="android:textSize">@dimen/H3Font</item>
        <item name="android:textColor">@color/BlackColor</item>
    </style>

    <!--标题-->
    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/H3Font</item>
        <item name="android:textColor">@color/BlackColor</item>
    </style>
</resources>
